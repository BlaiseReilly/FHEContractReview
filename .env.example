# Private Key for Deployment (DO NOT COMMIT YOUR ACTUAL PRIVATE KEY)
# Generate a new wallet for testing or use a testnet-only wallet
PRIVATE_KEY=your_private_key_here

# Ethereum Sepolia Testnet RPC URL
# Get free RPC endpoint from Alchemy (https://www.alchemy.com/) or Infura (https://infura.io/)
SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/your-api-key

# Etherscan API Key for Contract Verification
# Get your API key from https://etherscan.io/myapikey
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# Zama Network Configuration (Optional - for FHE deployment)
ZAMA_RPC_URL=https://devnet.zama.ai
ZAMA_TESTNET_RPC_URL=https://testnet.zama.ai

# Gas Reporting (Optional)
# Set to 'true' to enable gas reporting during tests
REPORT_GAS=false

# CoinMarketCap API Key (Optional - for gas cost estimation in USD)
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key

# Network Configuration
# Default network for deployment (hardhat, sepolia, zamaDevnet, zamaTestnet)
DEFAULT_NETWORK=sepolia

# ===================================
# SECURITY CONFIGURATION
# ===================================

# Pauser Configuration
# Role-based access control for emergency pausing
PAUSER_ADDRESS=0x0000000000000000000000000000000000000000
PAUSER_ROLE=PAUSER_ROLE

# Admin Configuration
ADMIN_ADDRESS=0x0000000000000000000000000000000000000000
OWNER_ADDRESS=0x0000000000000000000000000000000000000000

# Security Thresholds
MAX_GAS_PRICE=50000000000  # 50 Gwei max gas price
MIN_CONFIRMATIONS=2        # Minimum confirmations before considering transaction final
TIMEOUT_SECONDS=300        # Transaction timeout in seconds

# Rate Limiting (DoS Protection)
MAX_REQUESTS_PER_MINUTE=100
MAX_CONTRACTS_PER_USER=50
MAX_REVIEWS_PER_CONTRACT=100

# Access Control
ENABLE_WHITELIST=false
WHITELIST_ADDRESSES=

# Emergency Controls
ENABLE_CIRCUIT_BREAKER=true
EMERGENCY_WITHDRAWAL_DELAY=86400  # 24 hours in seconds

# ===================================
# PERFORMANCE OPTIMIZATION
# ===================================

# Compiler Optimization
SOLIDITY_OPTIMIZER_ENABLED=true
SOLIDITY_OPTIMIZER_RUNS=200
SOLIDITY_VIA_IR=false

# Gas Optimization
GAS_PRICE_STRATEGY=medium  # low, medium, high
GAS_LIMIT_MULTIPLIER=1.2
ENABLE_GAS_ESTIMATION=true

# Caching
ENABLE_CACHE=true
CACHE_TTL=3600  # 1 hour in seconds

# ===================================
# MONITORING AND ALERTS
# ===================================

# Error Reporting
ENABLE_ERROR_REPORTING=true
ERROR_WEBHOOK_URL=

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
PERFORMANCE_THRESHOLD_MS=1000

# Alert Notifications
ALERT_EMAIL=
ALERT_WEBHOOK_URL=
ENABLE_SLACK_NOTIFICATIONS=false
SLACK_WEBHOOK_URL=

# ===================================
# DEVELOPMENT/TESTING
# ===================================

# Testing Configuration
TEST_NETWORK=hardhat
TEST_VERBOSE=true
TEST_TIMEOUT=120000  # 2 minutes

# Mock Data
USE_MOCK_FHE=true
MOCK_DATA_SEED=12345

# Debug Mode
DEBUG_MODE=false
VERBOSE_LOGGING=false

# ===================================
# SECURITY NOTES
# ===================================
# 1. NEVER commit your actual .env file to version control
# 2. Add .env to your .gitignore file
# 3. Use a dedicated wallet for testnet deployments
# 4. Keep your private keys secure and encrypted
# 5. For production, use hardware wallets or secure key management systems
# 6. Regularly rotate API keys and private keys
# 7. Use environment-specific configurations
# 8. Enable circuit breakers for emergency situations
# 9. Implement rate limiting to prevent DoS attacks
# 10. Monitor gas prices and adjust thresholds accordingly
# ===================================

# ===================================
# SETUP INSTRUCTIONS
# ===================================
# 1. Copy this file to .env: cp .env.example .env
# 2. Replace all placeholder values with your actual credentials
# 3. Never share your .env file or commit it to git
# 4. To get Sepolia testnet ETH, use: https://sepoliafaucet.com/
# ===================================
